{
	"name": "base-api-template",
	"version": "1.0.0",
	"description": "Starter project for a REST API with Node.js, Express & MongoDB ðŸ”‹",
	"main": "index.js",
	"scripts": {
		"build": "babel src -d build",
		"build:docs": "jsdoc -c .jsdoc.json",
		"docker:build": "bash ./scripts/docker-builder.sh build",
		"docker:run": "bash ./scripts/docker-builder.sh runContainer",
		"lint": "eslint --ext .js src/",
		"prepush": "npm run test",
		"serve": "node dist/index.js",
		"start": "nodemon src/index.js --exec babel-node",
		"test": "NODE_ENV=test mocha --require babel-register test/**/*.spec.js --timeout 10000 --colors --exit",
		"version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0 && git add CHANGELOG.md"
	},
	"engines": {
		"node": "10.x"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@bitbucket.org:davi_calavera/d77-base-express.git"
	},
	"keywords": [
		"API",
		"Boilerplate",
		"MongoDB",
		"Express"
	],
	"author": "",
	"license": "",
	"bugs": {
		"url": "https://bitbucket.org/davi_calavera/d77-base-express"
	},
	"homepage": "https://bitbucket.org/davi_calavera/d77-base-express",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm run test"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"git add"
		]
	},
	"dependencies": {
		"body-parser": "^1.19.0",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.4",
		"cors": "^2.8.5",
		"dnscache": "^1.0.2",
		"express": "^4.17.1",
		"express-healthcheck": "^0.1.0",
		"express-validator": "^5.3.1",
		"mongoose": "^5.5.14",
		"mongoose-string-query": "^0.2.7",
		"mongoose-timestamp": "^0.6.0",
		"serve-favicon": "^2.5.0",
		"winston": "^3.2.1"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-polyfill": "^6.26.0",
		"babel-preset-env": "^1.7.0",
		"babel-register": "^6.26.0",
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"chai-http": "^4.3.0",
		"conventional-changelog-cli": "^2.0.21",
		"eslint": "^5.16.0",
		"eslint-config-standard": "^12.0.0",
		"eslint-plugin-import": "^2.17.3",
		"eslint-plugin-node": "^9.1.0",
		"eslint-plugin-promise": "^4.1.1",
		"eslint-plugin-standard": "^4.0.0",
		"husky": "^2.4.1",
		"lint-staged": "^8.2.0",
		"mocha": "^6.1.4",
		"nodemon": "^1.19.1",
		"sinon": "^7.3.2"
	}
}
