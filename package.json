{
	"name": "api-template",
	"version": "1.0.0",
	"description": "Starter project for a REST API with Node.js, Express & MongoDB ðŸ”‹",
	"main": "index.js",
	"scripts": {
		"build": "babel src -d build",
		"docker:build": "bash ./scripts/docker-builder.sh build",
		"docker:run": "bash ./scripts/docker-builder.sh runContainer",
		"lint": "eslint --ext .js src/",
		"prebuild": "npm run lint",
		"precommit": "lint-staged",
		"prepush": "npm run test",
		"serve": "node dist/index.js",
		"start": "nodemon src/index.js --exec babel-node",
		"test": "mocha --require babel-register test/**/*.spec.js --timeout 10000 --colors"
	},
	"engines": {
		"node": "8.x"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@bitbucket.org:davi_calavera/d77-express-template.git"
	},
	"keywords": [
		"API",
		"Boilerplate",
		"MongoDB",
		"Express"
	],
	"author": "",
	"license": "",
	"bugs": {
		"url": "https://bitbucket.org/davi_calavera/d77-express-template"
	},
	"homepage": "https://bitbucket.org/davi_calavera/d77-express-template",
	"dependencies": {
		"body-parser": "^1.18.3",
		"compression": "^1.7.3",
		"cookie-parser": "^1.4.3",
		"cors": "^2.8.4",
		"dnscache": "^1.0.1",
		"express": "^4.16.4",
		"mongoose": "^5.3.4",
		"mongoose-string-query": "^0.2.5",
		"mongoose-timestamp": "^0.6.0",
		"serve-favicon": "^2.5.0",
		"winston": "^3.1.0"
	},
	"devDependencies": {
		"babel-cli": "^6.26.0",
		"babel-plugin-transform-object-rest-spread": "^6.26.0",
		"babel-polyfill": "^6.26.0",
		"babel-preset-env": "^1.7.0",
		"babel-register": "^6.26.0",
		"eslint": "^5.7.0",
		"eslint-config-standard": "^12.0.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-node": "^7.0.1",
		"eslint-plugin-promise": "^4.0.1",
		"eslint-plugin-standard": "^4.0.0",
		"husky": "^1.1.2",
		"lint-staged": "^7.3.0",
		"mocha": "^5.2.0",
		"nodemon": "^1.18.4"
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"git add"
		]
	}
}
